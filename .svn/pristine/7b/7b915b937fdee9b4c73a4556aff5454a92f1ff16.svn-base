                    	upperchannel : zzjg,
                    	upperchannelname : zzjgmc,
                        msg: msg,
                        content_id : id,
                        leaf : false     		
                    };
        	}
        	if (leaf){
        		param.leaf = true
        	}
            winParam = {
                id: 'win_module',
                title: msg,
                url: '/cms_sys/content/content_save.html',
                width: 730,
                height: 650,
                other: param
            };
            winObj = baseTools.showWinExt(winParam);
