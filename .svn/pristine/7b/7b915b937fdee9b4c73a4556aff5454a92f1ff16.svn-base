//
//                $("#" + formSave_ + "ZZJG_MC").val(jsonObj.data.ZZJG_MC);
//
//                $("#" + formSave_ + "SJ_ZZJG_MC").val(jsonObj.data.SJ_ZZJG_MC);
//                if (jsonObj.data.SJ_ZZJG_MC == "航天金穗") {
