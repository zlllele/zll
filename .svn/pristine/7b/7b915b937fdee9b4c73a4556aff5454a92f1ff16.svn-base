                            ZZJG_DM: $("#" + formSave_ + "ZZJG_DM").val(),
                            ISDELETE: state
                        },
                        callback: [function (jsonObj, xhrArgs) {
                            if (parseInt(jsonObj.code) == 1) {
                                alert("修改成功！");
                                curSeg.onQuery();
                            } else {
                                alert(jsonObj.msg);
                            }
                        }]
                    });
                }
            }
